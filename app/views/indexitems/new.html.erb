<% if !@indexitem.errors.empty? %>
  <div class="alert alert-error">
    <ul>
      <% @indexitem.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="well">
  <%= form_for @indexitem, html: { class: "form-horizontal", multipart: true } do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :attachment %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :description %>
    <%= f.text_area :description, size: "20x3" %>
    <%= f.file_field :attachment %>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
</div>
